IPADDR_GLOBAL=$(/sbin/ip addr show eth0 2>/dev/null | /bin/grep 'inet ' | /bin/sed -e 's/.*inet \([^ ]*\)\/.*/\1/')
rm -rf /etc/ipsec.conf
curl "https://raw.githubusercontent.com/levelip/ipsec/master/ipsec.conf" -o  /etc/ipsec.conf
rm -rf /etc/xl2tpd/xl2tpd.conf
curl "https://raw.githubusercontent.com/levelip/ipsec/master/xl2tpd.conf" -o  /etc/xl2tpd/xl2tpd.conf
rm -rf /etc/ppp/options.xl2tpd
curl "https://raw.githubusercontent.com/levelip/ipsec/master/options.xl2tpd" -o  /etc/ppp/options.xl2tpd
